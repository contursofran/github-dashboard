{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowJs": true
  },
  "include": ["**/*.ts", "**/*.tsx", "views/Overview/helpers/getColor.ts"],
  "exclude": ["node_modules/**/*", "**/*.js", ".next/**/*"]
}
